.ai-answer-card
  padding 14px 16px
  margin-top 12px
  background #fff
  border-radius 12px
  border 1px solid rgba(0,0,0,0.06)
  box-shadow 0 2px 8px rgba(0,0,0,0.04)
  transition box-shadow .25s, transform .2s
  cursor pointer

  &:hover
    box-shadow 0 4px 14px rgba(0,0,0,0.08)
    transform translateY(-1px)
  /* 重置部分元素样式，防止样式冲突 */
  pre
    margin: 0
    padding: 5px
    border-radius 10px
    background #f6f8fa
    & + pre
      margin-top 8px
  pre, code
    white-space: pre-wrap;    /* 允许换行 */
    word-wrap: break-word;    /* 允许长行断开 */
    word-break: break-word;
  h1, h2, h3, h4, h5, h6, p, ul, ol, dl, figure, blockquote
    line-height: normal
    margin: 0
    padding: 0
  ul, ol
    list-style: none

.ai-answer-header
  display flex
  align-items center
  margin-bottom 8px

.ai-answer-icon
  font-size 18px
  margin-right 6px

.ai-answer-title
  font-weight 600
  font-size 15px
  color #333

.ai-answer-msg
  font-size 14px
  line-height normal
  color #555
  // white-space pre-wrap
  word-break break-word
  animation fadeIn .3s ease

@keyframes fadeIn
  from
    opacity 0
    transform translateY(4px)
  to
    opacity 1
    transform translateY(0)
